<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaterersDetails"
    android:background="#FDEDEC"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/name"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/rounded"


                />





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Starter"
                android:id="@+id/per_plate"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/name"
                android:textColor="@color/colorPrimary"

                />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/per_plate"
                android:layout_marginTop="10dp"
                android:id="@+id/starter"

                >

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Main Course"
                android:id="@+id/main"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/starter"
                android:textColor="@color/colorPrimary"

                />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main"
                android:layout_marginTop="10dp"
                android:id="@+id/maincourse"


                >

            </android.support.v7.widget.RecyclerView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Dessert"
                android:id="@+id/des"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/maincourse"
                android:textColor="@color/colorPrimary"

                />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/des"
                android:layout_marginTop="10dp"
                android:id="@+id/dessert"


                >

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/num"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="Contact number"
                android:layout_below="@+id/dessert"
                android:textColor="@color/colorPrimary"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/number"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/num"
                android:textColor="@color/colorPrimary"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/plates"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/number"
               android:text="Seats"

                />



            <Spinner
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/plates"
                android:layout_marginTop="10dp"
                android:id="@+id/spinner"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"


                >



            </Spinner>


            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:text="Book"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/spinner"
                android:onClick="onclick"
                />



        </RelativeLayout>
    </ScrollView>



        </RelativeLayout>